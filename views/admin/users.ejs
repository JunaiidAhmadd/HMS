<%- include("partials/admin_header", { pageTitle: "Users" }) %>

  <style>
    body {
      background-color: #f8f9fa;
      margin: 0;
      padding: 0;
      width: 100%;
      overflow-x: hidden;
    }

    .admin-wrapper {
      display: flex;
      width: 100%;
      height: 100vh;
      overflow: hidden;
    }

    #sidebar {
      width: 250px;
      height: 100vh;
      overflow: hidden !important;
      position: sticky;
      top: 0;
      background: #13192f;
    }

    .flex-grow-1 {
      flex-grow: 1;
      height: 100vh;
      overflow-y: auto;
    }

    @media (max-width: 768px) {
      #sidebar {
        position: fixed;
        left: -260px;
        transition: 0.3s ease;
        z-index: 1200;
      }

      #sidebar.active {
        left: 0;
      }
    }

    .table thead {
      background-color: #1b1e24;
      color: white !important;
    }

    .user-card {
      background: white;
      border: 1px solid #dee2e6;
      padding: 1rem;
      border-radius: 10px;
      margin-bottom: 15px;
    }

    .search-bar {
      width: 100%;
      padding: 12px 18px;
      border-radius: 8px;
      border: 1px solid #d1d1d1;
      margin-bottom: 20px;
      font-size: 16px;
    }

    .badge-joined {
      background: #0d6efd;
      padding: 6px 12px;
      color: white;
      border-radius: 8px;
      font-size: 0.75rem;
      display: inline-block;
      margin-top: 5px;
    }
  </style>


  <div id="sidebarOverlay"></div>

  <div class="admin-wrapper">

    <!-- SIDEBAR -->
    <%- include("partials/admin_sidebar", { activePage: "users" }) %>

      <!-- MAIN CONTENT -->
      <div class="flex-grow-1">

        <!-- Desktop Header -->
        <header class="d-none d-md-flex justify-content-between align-items-center bg-white shadow-sm py-3 px-4">
          <h5 class="fw-bold m-0">Users</h5>
          <div class="d-flex align-items-center gap-2">
            <span>Admin</span>
            <i class="bi bi-person-circle fs-4"></i>
          </div>
        </header>

        <main class="p-4">

          <h4 class="fw-bold mb-4">Registered Users</h4>

          <!-- FILTER & SEARCH WRAPPER -->
          <div class="row g-2 mb-4">

            <!-- BRANCH FILTER -->
            <div class="col-12 col-md-4">
              <form method="GET" action="/admin/users">
                <select name="branch" class="form-select" onchange="this.form.submit()">
                  <option value="">All Branches</option>
                  <% branches.forEach(b=> { %>
                    <option value="<%= b._id %>" <%=selectedBranch==b._id ? 'selected' : '' %>>
                      <%= b.name %>
                    </option>
                    <% }) %>
                </select>
              </form>
            </div>

            <!-- SEARCH BAR -->
            <div class="col-12 col-md-8">

              <!-- ðŸ” SEARCH BAR -->
              <input type="text" id="searchInput" class="search-bar mb-0" placeholder="Search by name, email, phone...">
            </div>
          </div>

          <!-- DESKTOP TABLE -->
          <div class="card shadow-sm d-none d-md-block" style="border-radius: 12px">
            <div class="table-responsive" style="border-radius: 12px">
              <table class="table table-hover align-middle mb-0" style="border-radius: 12px">
                <thead class="table-dark">
                  <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Joined</th>
                    <th class="text-center">Actions</th>
                  </tr>
                </thead>

                <tbody id="userTable">
                  <% if (users && users.length> 0) { %>
                    <% users.forEach(u=> { %>

                      <tr class="search-row">
                        <td><strong>
                            <%= u.fullName %>
                          </strong></td>
                        <td>
                          <%= u.email %>
                        </td>
                        <td>
                          <%= u.phone || "-" %>
                        </td>
                        <td>
                          <%= u.createdAt.toLocaleDateString() %>
                        </td>

                        <td class="text-center">
                          <form action="/admin/users/delete/<%= u._id %>" method="POST" class="d-inline"
                            onsubmit="return confirm('Delete user?')">

                            <button class="btn btn-danger btn-sm">
                              <i class="bi bi-trash"></i>
                            </button>

                          </form>
                        </td>
                      </tr>

                      <% }) %>
                        <% } else { %>

                          <tr>
                            <td colspan="5" class="text-center py-5 text-muted">
                              <i class="bi bi-inbox fs-1"></i><br>No users found.
                            </td>
                          </tr>

                          <% } %>
                </tbody>
              </table>
            </div>
          </div>


          <!-- MOBILE VIEW -->
          <div class="d-md-none" id="mobileUserList">

            <% if (users && users.length> 0) { %>

              <% users.forEach(u=> { %>

                <div class="user-card shadow-sm search-row">

                  <strong>
                    <%= u.fullName %>
                  </strong>
                  <p class="text-muted m-0">
                    <%= u.email %>
                  </p>
                  <p class="text-muted m-0">Phone: <%= u.phone || "-" %>
                  </p>

                  <span class="badge-joined">
                    Joined: <%= u.createdAt.toLocaleDateString() %>
                  </span>

                  <form action="/admin/users/delete/<%= u._id %>" method="POST"
                    onsubmit="return confirm('Delete user?')">

                    <button class="btn btn-danger btn-sm w-100 mt-3">
                      Delete
                    </button>

                  </form>

                </div>

                <% }) %>

                  <% } else { %>

                    <div class="text-center py-5 text-muted">
                      <i class="bi bi-inbox fs-1"></i><br>No users found.
                    </div>

                    <% } %>

          </div>

        </main>

      </div>
  </div>


  <!-- ðŸ” LIVE SEARCH SCRIPT -->
  <script>
    document.getElementById("searchInput").addEventListener("keyup", function () {

      let filter = this.value.toLowerCase();
      let rows = document.querySelectorAll(".search-row");

      rows.forEach(row => {
        let content = row.innerText.toLowerCase();
        row.style.display = content.includes(filter) ? "" : "none";
      });

    });
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>